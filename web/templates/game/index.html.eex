<h2>Open games</h2>
<ul>
<%= for game <- @games do %>
  <li>
    <span><%= game.name %></span>
    <%= link "Join as player", to: game_path(@conn, :show, game, mode: "player"), class: "btn btn-default btn-xs" %>
    <%= link "Join as spectator", to: game_path(@conn, :show, game), class: "btn btn-default btn-xs" %>
  </li>
<% end %>
</ul>
<%= link "New game", to: game_path(@conn, :new) %>
